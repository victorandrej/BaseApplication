com.teresoft.serrano.configuracao.repository.ParametroRepository

  getRootParams()
    select param
    from Parametro param
    where  param.nome not like '%.%'  order by param.descricao

  getChildrens(String parametro)
    from Parametro param
    where lower(param.nome) <> lower(:parametro) and lower(param.nome) like  lower(concat(:parametro,'%'))
    order by param.descricao

  getParametroByNome(String nome)
    from Parametro param where param.nome = :nome
